{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // "allowImportingTsExtensions": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "declaration": true
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules"]
}